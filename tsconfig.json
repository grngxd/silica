{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "outDir": "./out",
        "rootDir": "./packages",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "+*": ["./packages/*"],
            "+scripts/*": ["./packages/scripts/*"]
        }
    },
    "include": [
        "packages/**/*",
        "packages/scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "out",
        "packages/*/node_modules",
        "packages/*/out"
    ]
}